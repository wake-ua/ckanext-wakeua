{
  "scheming_version": 1,
  "group_type": "group",
  "about_url": "http://github.com/ckan/ckanext-scheming",
  "fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "multilingual_text",
      "required": true
    },
    {
      "field_name": "name",
      "label": "URL",
      "validators": "not_empty unicode_safe name_validator group_name_validator",
      "form_snippet": "slug.html",
      "form_placeholder": "my-org"
    },
    {
      "field_name": "description",
      "label": "Description",
      "preset": "multilingual_markdown",
      "form_placeholder": "eg. Some useful notes about my organization"
    },
    {
      "field_name": "image_url",
      "label": "Image URL",
      "form_placeholder": "http://example.com/my-image.jpg"
    }
  ]
}
